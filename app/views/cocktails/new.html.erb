<div class="container col-6 mt-5">

<h1>Add a new cocktail</h1>

<%= simple_form_for(@cocktail) do |f| %>

<%= f.input :name %>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>

<%= f.submit "add cocktail", class: "btn btn-primary" %>
<% end %>

<p class="my-3"><%= link_to "back to all cocktails", cocktails_path, class: "btn btn-secondary" %></p>
</div>
