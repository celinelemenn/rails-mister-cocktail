<div class="container col-6 mt-5">
<h1>Add a dose to <%= @cocktail.name %> cocktail</h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.association :ingredient %>
<%= f.input :description %>
<%= f.submit "add ingredient", class: "btn btn-primary" %>
<% end %>

<p><%= link_to "back to #{@cocktail.name}", cocktail_path(@cocktail), class: "btn btn-secondary my-3" %></p>

</div>
